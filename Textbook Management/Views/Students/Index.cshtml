            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sgender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Saddr)
            </td>
